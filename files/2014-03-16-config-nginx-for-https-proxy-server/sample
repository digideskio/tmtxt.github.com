# -*- mode: conf -*-
server {
       listen 443 ssl;
       server_name      pedigree;
       ssl_certificate /Volumes/tmtxt/cert/server.crt;
       ssl_certificate_key /Volumes/tmtxt/cert/server.key;

       location / {
                proxy_pass http://localhost:3000;
       }
}

server {
       listen 8080;
       server_name      pedigree;
 
       location /login {
                rewrite ^ https://$host/login permanent;
        }

       location / {
                proxy_pass http://localhost:3000;
        }
}